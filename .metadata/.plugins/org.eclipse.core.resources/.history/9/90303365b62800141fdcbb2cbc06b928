	<script type="text/javascript">
		$(function() {

			//init selected topic
			highlight_clicked_topic_selector('#selector_company_introduction');
			show_topic_content('#content_company_introduction');

		});

		/* self-defined functions */
		//onclick listener
		function select_topic(arg_clicked_obj) {
			var selected_id = $(arg_clicked_obj).attr('id');
			var content_id = selected_id.substring(selected_id.indexOf('_'));
			highlight_clicked_topic_selector(arg_clicked_obj);
			show_topic_content('#content' + content_id);
		}

		//highlight clicked topic selector
		function highlight_clicked_topic_selector(arg_clicked_topic_selector) {
			$('#index_topic_selectors_block > p').css({
				'border-bottom' : 'none',
				'color' : '#fff'
			});
			$(arg_clicked_topic_selector).css({
				'border-bottom' : 'solid thin #ffff00',
				'color' : '#ffff00'
			});
		}

		//show topic content
		function show_topic_content(arg_shown_topic_content) {
			$('#index_topic_contents_block > section').css({
				'display' : 'none'
			});
			$(arg_shown_topic_content).css({
				'display' : 'block'
			});
		}

		// change language
		var language_version = new Object;
		var token_html_page = '{{token_html_page}}';
		$('#language_selector').change(function() {
			language_version['language'] = $(this).val();
			language_version['token_html_page'] = token_html_page;

			change_language();
		});

		function change_language() {
			var json_string_language_version_request = JSON.stringify(
					language_version, 2, 2);
			$
					.ajax(
							'/index_language_version_handler',
							{
								type : 'POST',
								data : {
									fmt : 'json',
									json_language_version_request : json_string_language_version_request
								},
								success : success_handler,
								error : fail_handler
							});
		}

		function success_handler(response) {
			if (response.language === 'english') {
				$('#index_topic_selectors_block > p').css({
					'letter-spacing' : '2px',
					'text-indent' : '2px'
				});
				// selector update
				//company introduction
				$('#selector_company_introduction').attr({
					title : response.company_introduction_selector
				});
				$('#selector_company_introduction').text(
						response.company_introduction_selector);

				//cloud services
				$('#selector_cloud_services_introduction').attr({
					title : response.cloud_services_introduction_selector
				});
				$('#selector_cloud_services_introduction').text(
						response.cloud_services_introduction_selector);

				//services integration
				$('#selector_cloud_services_integration').attr({
					title : response.cloud_services_integration_selector
				});
				$('#selector_cloud_services_integration').text(
						response.cloud_services_integration_selector);

				//contact
				$('#selector_contact').attr({
					title : response.contact_information_selector
				});
				$('#selector_contact').text(
						response.contact_information_selector);

				//content
				$('#map_company_introduction > p').text(
						response.company_introduction_content);

				$('#cloud_services_article').text(
						response.cloud_services_introduction_content);

				$('#cloud_services_integration_article').text(
						response.cloud_services_integration_content);

				$('#content_contact > p').text(
						response.contact_information_content);

				//contact message titles
				$('#contact_message_name').text(response.contact_message_name);
				$('#contact_message_email')
						.text(response.contact_message_email);
				$('#contact_message_subject').text(
						response.contact_message_subject);
				$('#contact_message_body').text(response.contact_message_body);

				$('#rewrite_message').val(response.btn_rewrite);
				$('#send_message').val(response.btn_send);

			} else if (response.language === 'mandarin') {
				$('#index_topic_selectors_block > p').css({
					'letter-spacing' : '12px',
					'text-indent' : '12px'
				});
				// selector
				$('#selector_company_introduction').attr({
					title : response.company_introduction_selector
				});
				$('#selector_company_introduction').text(
						response.company_introduction_selector);

				$('#selector_cloud_services_introduction').attr({
					title : response.cloud_services_introduction_selector
				});
				$('#selector_cloud_services_introduction').text(
						response.cloud_services_introduction_selector);

				//services integration
				$('#selector_cloud_services_integration').attr({
					title : response.cloud_services_integration_selector
				});
				$('#selector_cloud_services_integration').text(
						response.cloud_services_integration_selector);

				$('#selector_contact').attr({
					title : response.contact_information_selector
				});
				$('#selector_contact').text(
						response.contact_information_selector);

				//content
				$('#map_company_introduction > p').text(
						response.company_introduction_content);

				$('#cloud_services_article').text(
						response.cloud_services_introduction_content);

				$('#cloud_services_integration_article').text(
						response.cloud_services_integration_content);

				$('#content_contact > p').text(
						response.contact_information_content);

				//contact message titles
				$('#contact_message_name').text(response.contact_message_name);
				$('#contact_message_email')
						.text(response.contact_message_email);
				$('#contact_message_subject').text(
						response.contact_message_subject);
				$('#contact_message_body').text(response.contact_message_body);

				$('#rewrite_message').val(response.btn_rewrite);
				$('#send_message').val(response.btn_send);
			}
		}

		function fail_handler(xhr, textStatus, error) {
			//popup alert message
			alert('Status Message: ' + xhr.statusText + ' ; Error: ' + error);

			//log
			console.log(xhr.statusText);
			console.log(textStatus);
			console.log(error);
		}

		//show leaflet map
		var map;
		(function() {

			//set vector style
			var vector = L.geoJson(topojson.feature(topojson_nation,
					topojson_nation.objects.countries), {
				style : {
					className : 'map'
				}
			});

			//map attr. info.
			var mbAttr = 'Map data &copy; <a href="http://openstreetmap.org">OpenStreetMap</a> contributors, '
					+ '<a href="http://creativecommons.org/licenses/by-sa/2.0/">CC-BY-SA</a>, '
					+ 'Imagery © <a href="http://mapbox.com">Mapbox</a>', mbUrl = 'https://{s}.tiles.mapbox.com/v3/{id}/{z}/{x}/{y}.png';

			//gray scale map
			var grayscale = L.tileLayer(mbUrl, {
				id : 'examples.map-20v6611k',
				attribution : mbAttr
			}), streets = L.tileLayer(mbUrl, {
				id : 'examples.map-i86knfo3',
				attribution : mbAttr
			});

			//marker
			var myIcon = L.icon({
				iconUrl : '/leaflet/images/marker-icon.png',
				iconSize : [ 20, 33 ],
				iconAnchor : [ 9, 32 ],
				shadowSize : [ 22, 33 ],
				shadowAnchor : [ 5, 32 ],
				shadowUrl : '/leaflet/images/marker-shadow.png',
			});

			var config = {
				initLatLng : new L.LatLng(22.605028, 120.298636), // kaohsiung software 22.605028, 120.298636 ; mountain view 37.380498, -122.061526
				initZoom : 2,
				minZoom : 2,
				maxZoom : 2
			};

			map = L.map('map_company_introduction', {
				minZoom : config.minZoom,
				maxZoom : config.maxZoom,
				zoomControl : false,
				dragging : false,
				zoom : 2,
				center : config.initLatLng,
				layers : grayscale,
				attributionControl : false

			}), routeLines = [ L.polyline([[ 22.605028, 120.298636 ],
					[ 48.8566140, 2.3522220 ], [ 37.380498, -122.061526 ],[ 22.605028, 120.298636 ] ]) ], markers = [];

			//map.addLayer(new L.TileLayer(config.tileUrl));
			//map.setView(config.initLatLng, config.initZoom);
			
			//defualt location of popup
			var popup, circle, marker, polyline;
			function do_animation() {
				//set init popup and location circle
				popup = L.popup({keepInView: true})
		     	.setLatLng([ 22.605028, 120.298636 ])
		     	.setContent('<p style="color:#000;">Start Point-<br />Kaohsiung...</p>')
		     	.openOn(map);
				
				circle = L.circle([ 22.605028, 120.298636 ], 200, {
				    color: '#f00',
				    fillColor: '#f05',
				    fillOpacity: 0.8
				}).bindPopup('<p style="color:#000;">This is Kaohsiung</p>', {keepInView: true}).addTo(map);
				
				
				
				//iterate LatLng array
				$.each(routeLines, function(i, routeLine) {
					marker = L.animatedMarker(routeLine.getLatLngs(), {
						icon : myIcon,
						autoStart : false,
						distance : 100000, // meters
						interval : 100, // milliseconds
						onEnd : function() {
							$(this._shadow).fadeOut(100);
							$(this._icon).fadeOut(100, function() {
								map.removeLayer(this);
							});
							//this.closePopup();
							this.bindPopup('<p style="color: #000;">Final Destination- HomeTown Kaoshiung</p>').openPopup();
							clearMap(map);
							setTimeout(restart_animation(), 500);
						}
					});
					
					//add marker on map and push it into array
					map.addLayer(marker);
					markers.push(marker);
					
					//click event is fired up while clicking map
					map.on('click', function(e) {
						marker.start();
					});
				});
			}
			
			function restart_animation(){
				//apply promise to this animation
				do_animation();
				marker.start();
			}
			
			function clearMap(m) {
			    for(i in m._layers) {
			        if(m._layers[i]._path != undefined) {
			            try {
			                m.removeLayer(m._layers[i]);
			            }
			            catch(e) {
			                console.log("problem with " + e + m._layers[i]);
			            }
			        }
			    }
			}

			//start animation after 500 mil-sec
			do_animation();
			//setTimeout(marker.start(), 10000);
			/* end of animation */
			
			
			/* drawing on map */
			//draw curve and points
			/* var locations = {
				"countries" : [ {
					"id" : 12,
					"lt" : 22.605028,
					"ln" : 120.298636,
