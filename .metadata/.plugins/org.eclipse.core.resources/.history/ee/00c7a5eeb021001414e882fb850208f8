							<label><span style="color: #f00; display: inline;">*
							</span><span id="contact_message_subject">{{contact_message_subject}}</span></label>
							<input type="text">
						</div>
						<div>
							<label><span style="color: #f00; display: inline;">*
							</span><span id="contact_message_body">{{contact_message_body}}</span></label>
