	<script type="text/javascript">
		$(function() {

			//init selected topic
			highlight_clicked_topic_selector('#selector_company_introduction');
			show_topic_content('#content_company_introduction');

		});

		/* self-defined functions */
		//onclick listener
		function select_topic(arg_clicked_obj) {
			var selected_id = $(arg_clicked_obj).attr('id');
			var content_id = selected_id.substring(selected_id.indexOf('_'));
			highlight_clicked_topic_selector(arg_clicked_obj);
			show_topic_content('#content' + content_id);
		}

		//highlight clicked topic selector
		function highlight_clicked_topic_selector(arg_clicked_topic_selector) {
			$('#index_topic_selectors_block > p').css({
				'border-bottom' : 'none',
				'color' : '#fff'
			});
			$(arg_clicked_topic_selector).css({
				'border-bottom' : 'solid thin #ffff00',
				'color' : '#ffff00'
			});
		}

		//show topic content
		function show_topic_content(arg_shown_topic_content) {
			$('#index_topic_contents_block > section').css({
				'display' : 'none'
			});
			$(arg_shown_topic_content).css({
				'display' : 'block'
			});
		}

		// change language
		var language_version = new Object;
		var token_html_page = '{{token_html_page}}';
		$('#language_selector').change(function() {
			language_version['language'] = $(this).val();
			language_version['token_html_page'] = token_html_page;

			change_language();
		});

		function change_language() {
			var json_string_language_version_request = JSON.stringify(
					language_version, 2, 2);
			$
					.ajax(
							'/index_language_version_handler',
							{
								type : 'POST',
								data : {
									fmt : 'json',
									json_language_version_request : json_string_language_version_request
								},
								success : success_handler,
								error : fail_handler
							});
		}

		function success_handler(response) {
			if (response.language === 'english') {
				$('#index_topic_selectors_block > p').css({
					'letter-spacing' : '2px',
					'text-indent' : '2px'
				});
				// selector
				$('#selector_company_introduction').attr({
					title : response.company_introduction_selector
				});
				$('#selector_company_introduction').text(
						response.company_introduction_selector);

				$('#selector_cloud_services_introduction').attr({
					title : response.cloud_services_introduction_selector
				});
				$('#selector_cloud_services_introduction').text(
						response.cloud_services_introduction_selector);

				$('#selector_contact').attr({
					title : response.contact_information_selector
				});
				$('#selector_contact').text(
						response.contact_information_selector);

				//content
				$('#content_company_introduction > p').text(
						response.company_introduction_content);

				$(
						'#content_cloud_services_introduction > p[id="brief_introduction_company_service"]')
						.text(response.cloud_services_introduction_content);

				$('#content_contact > p').text(
						response.contact_information_content);

				//contact message titles
				$('#contact_message_name').text(response.contact_message_name);
				$('#contact_message_email')
						.text(response.contact_message_email);
				$('#contact_message_subject').text(
						response.contact_message_subject);
				$('#contact_message_body').text(response.contact_message_body);

				$('#rewrite_message').val(response.btn_rewrite);
				$('#send_message').val(response.btn_send);

			} else if (response.language === 'mandarin') {
				$('#index_topic_selectors_block > p').css({
					'letter-spacing' : '12px',
					'text-indent' : '12px'
				});
				// selector
				$('#selector_company_introduction').attr({
					title : response.company_introduction_selector
				});
				$('#selector_company_introduction').text(
						response.company_introduction_selector);

				$('#selector_cloud_services_introduction').attr({
					title : response.cloud_services_introduction_selector
				});
				$('#selector_cloud_services_introduction').text(
						response.cloud_services_introduction_selector);

				$('#selector_contact').attr({
					title : response.contact_information_selector
				});
				$('#selector_contact').text(
						response.contact_information_selector);

				//content
				$('#content_company_introduction > p').text(
						response.company_introduction_content);

				$(
						'#content_cloud_services_introduction > p[id="brief_introduction_company_service"]')
						.text(response.cloud_services_introduction_content);

				$('#content_contact > p').text(
						response.contact_information_content);

				//contact message titles
				$('#contact_message_name').text(response.contact_message_name);
				$('#contact_message_email')
						.text(response.contact_message_email);
				$('#contact_message_subject').text(
						response.contact_message_subject);
				$('#contact_message_body').text(response.contact_message_body);

				$('#rewrite_message').val(response.btn_rewrite);
				$('#send_message').val(response.btn_send);
			}
		}

		function fail_handler(xhr, textStatus, error) {
			//popup alert message
			alert('Status Message: ' + xhr.statusText + ' ; Error: ' + error);

			//log
			console.log(xhr.statusText);
			console.log(textStatus);
			console.log(error);
		}

		//show leaflet map
		/*globals L $*/

		// This demo is based off of cibi.me by OpenPlans and my earlier visualization
		// at http://github.com/openplans/cibi_animation
		(function() {
			var bikeIcon = L.icon({
				iconUrl : '/leaflet/images/marker-icon.png',
				iconSize : [ 25, 39 ],
				iconAnchor : [ 12, 39 ],
				shadowUrl : null
			});

			var config = {
				tileUrl : 'http://{s}.tiles.mapbox.com/v3/openplans.map-g4j0dszr/{z}/{x}/{y}.png',
				initLatLng : new L.LatLng(22.605028, 120.298636), // kaohsiung software 22.605028, 120.298636 ; mountain view 37.380498, -122.061526
				initZoom : 12,
				minZoom : 12,
				maxZoom : 12
			};

			var map = L.map('map_company_introduction', {
				minZoom : config.minZoom,
				maxZoom : config.maxZoom,
				zoomControl : false

			}), routeLines = [ L.polyline([ [ 22.605028, 120.298636 ],
					[ 22.605028, 120.288636 ], [ 22.615028, 120.308636 ],
					[ 22.615028, 120.291636 ], [ 22.585028, 120.398636 ],
					[ 22.635028, 120.232636 ], [ 22.605028, 120.298636 ] ]) ], markers = [];

			map.addLayer(new L.TileLayer(config.tileUrl));
			map.setView(config.initLatLng, config.initZoom);

			var marker;
			function do_animation() {
				$.each(routeLines, function(i, routeLine) {
					marker = L.animatedMarker(routeLine.getLatLngs(), {
						icon : bikeIcon,
						autoStart : true,
						distance : 1000, // meters
						interval : 2000, // milliseconds
						onEnd : function() {
							$(this._shadow).fadeOut(300);
							$(this._icon).fadeOut(1000, function() {
								map.removeLayer(this);
							});

							setTimeout(do_animation(), 8000);
						}
					});

					map.addLayer(marker);
					markers.push(marker);
				});
			}

			//start animation after 500 mil-sec
			setTimeout(do_animation(), 300);

		}());
		//end of show map

		/* d3 + leaflet */
		var locations = {
			"countries" : [ {
				"id" : 12,
				"lt" : 22.605028,
				"ln" : 120.298636,
				"tw" : "Kaohsiung",
				"fo" : "",
				"al" : 1,
				"d8" : "04\/10\/12"
			}, {
				"id" : 14,
				"lt" : 48.8566140,
				"ln" : 2.3522220,
				"tw" : "Italy",
				"fo" : "",
				"al" : 5,
				"d8" : "20\/10\/12"
			}, {
				"id" : 13,
				"lt" : 37.3860520,
				"ln" : -122.0838510,
				"tw" : "Mountain View, CA",
				"fo" : "",
				"al" : 10,
				"d8" : "27\/10\/12"
			} ]
		};
		var map = L.map('map_container', {
			zoom : 2,
			center : [ 32, -60 ],
			layers : vector,
			maxZoom : 16,
			zoomControl : false,
			attributionControl : false
		});
		var marker_icon = L.divIcon({
			iconSize : [ 8, 8 ],
			iconAnchor : [ 4, 4 ]
		});
		// Start and end points, in x = longitude, y = latitude values
		var start = {
			x : 2.3522220,
			y : 48.8566140
		};
		var end = {
			x : -122.0838510,
			y : 37.3860520
		};
		var generator = new arc.GreatCircle(start, end, {
			name : 'Paris to Mountain View'
		});
		var line = generator.Arc(150, {
			offset : 0
		});
		var myStyle = {
			"color" : "#f00",
			"weight" : 2,
			"opacity" : 0.9
		};
		L.geoJson(line.json(), {
			style : myStyle
		}).addTo(map);

		var marker_icon = L.divIcon({
	        iconSize: [8,8],
	        iconAnchor: [4,4]
	    });
		$.each(locations['countries'], function(i, item) {
			var coords = new L.LatLng(item.lt, item.ln);
	        marker = L.marker(coords, {icon: marker_icon}).addTo(map)
	            .on('click', function(e) { map.setView(e.target.getLatLng()) });
		});
		
		var coords = new L.LatLng(37.3860520, -122.0838510);
        marker = L.marker(coords, {icon: marker_icon}).addTo(map)
            .on('click', function(e) { map.setView(e.target.getLatLng()) });
	</script>

	<!-- end -->
</div>
{% endblock %}
